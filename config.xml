<?xml version='1.0' encoding='utf-8'?>
<widget id="org.trmn.medusa" version="0.0.9" xmlns="http://www.w3.org/ns/widgets"
        xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>MEDUSA</name>
    <description>
        Mobile client for The Royal Manticoran Navy: The Official Honor Harrington Fan Organization
    </description>
    <author email="David.L.Weiner30030@gmail.com">
        David Weiner
    </author>
    <content src="index.html"/>
    <plugin name="cordova-plugin-whitelist" spec="1"/>
    <access origin="*"/>
    <allow-intent href="http://*/*"/>
    <allow-intent href="https://*/*"/>
    <allow-intent href="tel:*"/>
    <allow-intent href="sms:*"/>
    <allow-intent href="mailto:*"/>
    <allow-intent href="geo:*"/>
    <platform name="android">
        <allow-intent href="market:*"/>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*"/>
        <allow-intent href="itms-apps:*"/>
    </platform>
    <engine name="ios" spec="~4.2.0"/>
    <engine name="android" spec="~5.2.1"/>
    <feature name="Device">
        <param name="ios-package" value="CDVDevice"/>
    </feature>
    <allow-navigation href="*"/>
    <platform name="android">
        <icon src="res/android/mipmap-hdpi/ic_launcher.png" density="hdpi"/>
        <icon src="res/android/mipmap-ldpi/ic_launcher.png" density="ldpi"/>
        <icon src="res/android/mipmap-mdpi/ic_launcher.png" density="mdpi"/>
        <icon src="res/android/mipmap-xhdpi/ic_launcher.png" density="xhdpi"/>
        <icon src="res/android/mipmap-xxhdpi/ic_launcher.png" density="xxhdpi"/>
        <icon src="res/android/mipmap-xxxhdpi/ic_launcher.png" density="xxxhdpi"/>

        <splash src="res/android/mipmap-hdpi/ic_launcher.png" density="hdpi"/>
        <splash src="res/android/mipmap-ldpi/ic_launcher.png" density="ldpi"/>
        <splash src="res/android/mipmap-mdpi/ic_launcher.png" density="mdpi"/>
        <splash src="res/android/mipmap-xhdpi/ic_launcher.png" density="xhdpi"/>
        <splash src="res/android/mipmap-xxhdpi/ic_launcher.png" density="xxhdpi"/>
        <splash src="res/android/mipmap-xxxhdpi/ic_launcher.png" density="xxxhdpi"/>

        <preference name="SplashScreenDelay" value="3000"/>
        <preference name="SplashMaintainAspectRatio" value="true"/>
        <preference name="SplashShowOnlyFirstTime" value="false"/>
    </platform>

    <platform name="ios">
        <icon src="res/ios/project-medusa-180.png" width="180" height="180"/>
        <icon src="res/ios/project-medusa-167.png" width="167" height="167"/>
        <icon src="res/ios/project-medusa-152.png" width="152" height="152"/>
        <icon src="res/ios/project-medusa-87.png" width="87" height="87"/>
        <icon src="res/ios/project-medusa-80.png" width="80" height="80"/>
        <icon src="res/ios/project-medusa-76.png" width="76" height="76"/>
        <icon src="res/ios/project-medusa-60.png" width="60" height="60"/>
        <icon src="res/ios/project-medusa-58.png" width="58" height="58"/>
        <icon src="res/ios/project-medusa-29.png" width="29" height="29"/>

        <splash src="res/ios/project-medusa-180.png" width="180" height="180"/>
        <splash src="res/ios/project-medusa-167.png" width="167" height="167"/>
        <splash src="res/ios/project-medusa-152.png" width="152" height="152"/>
        <splash src="res/ios/project-medusa-87.png" width="87" height="87"/>
        <splash src="res/ios/project-medusa-80.png" width="80" height="80"/>
        <splash src="res/ios/project-medusa-76.png" width="76" height="76"/>
        <splash src="res/ios/project-medusa-60.png" width="60" height="60"/>
        <splash src="res/ios/project-medusa-58.png" width="58" height="58"/>
        <splash src="res/ios/project-medusa-29.png" width="29" height="29"/>
        <preference name="NSPhotoLibraryUsageDescription" value="Store ID card and other related images"/>
        <preference name="orientation" value="all" />
    </platform>

    <preference name="StatusBarOverlaysWebView" value="false"/>
    <preference name="StatusBarBackgroundColor" value="#000000"/>
    <preference name="StatusBarStyle" value="lightcontent"/>
    <preference name="FadeSplashScreen" value="false"/>
    <preference name="FadeSplashScreenDuration" value="3000"/>
    <preference name="ShowSplashScreenSpinner" value="false"/>
</widget>
