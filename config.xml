<?xml version='1.0' encoding='utf-8'?>
<widget id="org.trmn.medusa" version="1.0.4" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>MEDUSA</name>
    <description>
        Mobile client for The Royal Manticoran Navy: The Official Honor Harrington Fan Organization
    </description>
    <author email="David.L.Weiner30030@gmail.com">
        David Weiner
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <feature name="Device">
        <param name="ios-package" value="CDVDevice" />
    </feature>
    <allow-navigation href="*" />
    <platform name="android">
        <icon density="hdpi" src="res/android/res/drawable-hdpi/icon.png" />
        <icon density="ldpi" src="res/android/res/drawable-ldpi/icon.png" />
        <icon density="mdpi" src="res/android/res/drawable-mdpi/icon.png" />
        <icon density="xhdpi" src="res/android/res/drawable-xhdpi/icon.png" />
        <icon density="xxhdpi" src="res/android/res/drawable-xxhdpi/icon.png" />
        <icon density="xxxhdpi" src="res/android/res/drawable-xxxhdpi/icon.png" />
        <splash density="land-hdpi" src="res/android/res/drawable-land-hdpi/screen.png" />
        <splash density="land-ldpi" src="res/android/res/drawable-land-ldpi/screen.png" />
        <splash density="land-mdpi" src="res/android/res/drawable-land-mdpi/screen.png" />
        <splash density="land-xhdpi" src="res/android/res/drawable-land-xhdpi/screen.png" />
        <splash density="land-xxhdpi" src="res/android/res/drawable-land-xxhdpi/screen.png" />
        <splash density="land-xxxhdpi" src="res/android/res/drawable-land-xxxhdpi/screen.png" />
        <splash density="port-hdpi" src="res/android/res/drawable-hdpi/screen.png" />
        <splash density="port-ldpi" src="res/android/res/drawable-ldpi/screen.png" />
        <splash density="port-mdpi" src="res/android/res/drawable-mdpi/screen.png" />
        <splash density="port-xhdpi" src="res/android/res/drawable-xhdpi/screen.png" />
        <splash density="port-xxhdpi" src="res/android/res/drawable-xxhdpi/screen.png" />
        <splash density="port-xxxhdpi" src="res/android/res/drawable-xxxhdpi/screen.png" />
        <preference name="SplashScreenDelay" value="3000" />
        <preference name="SplashMaintainAspectRatio" value="true" />
        <preference name="SplashShowOnlyFirstTime" value="false" />
        <preference name="android-manifest/@android:installLocation" value="auto" />
    </platform>
    <platform name="ios">
        <icon height="180" src="res/ios/project-medusa-180.png" width="180" />
        <icon height="167" src="res/ios/project-medusa-167.png" width="167" />
        <icon height="152" src="res/ios/project-medusa-152.png" width="152" />
        <icon height="87" src="res/ios/project-medusa-87.png" width="87" />
        <icon height="80" src="res/ios/project-medusa-80.png" width="80" />
        <icon height="76" src="res/ios/project-medusa-76.png" width="76" />
        <icon height="60" src="res/ios/project-medusa-60.png" width="60" />
        <icon height="58" src="res/ios/project-medusa-58.png" width="58" />
        <icon height="29" src="res/ios/project-medusa-29.png" width="29" />
        <splash height="180" src="res/ios/project-medusa-180.png" width="180" />
        <splash height="167" src="res/ios/project-medusa-167.png" width="167" />
        <splash height="152" src="res/ios/project-medusa-152.png" width="152" />
        <splash height="87" src="res/ios/project-medusa-87.png" width="87" />
        <splash height="80" src="res/ios/project-medusa-80.png" width="80" />
        <splash height="76" src="res/ios/project-medusa-76.png" width="76" />
        <splash height="60" src="res/ios/project-medusa-60.png" width="60" />
        <splash height="58" src="res/ios/project-medusa-58.png" width="58" />
        <splash height="29" src="res/ios/project-medusa-29.png" width="29" />
        <preference name="NSPhotoLibraryUsageDescription" value="Store ID card and other related images" />
        <preference name="orientation" value="all" />
    </platform>
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarBackgroundColor" value="#000000" />
    <preference name="StatusBarStyle" value="lightcontent" />
    <preference name="FadeSplashScreen" value="false" />
    <preference name="FadeSplashScreenDuration" value="3000" />
    <preference name="ShowSplashScreenSpinner" value="false" />
    <engine name="android" spec="6.3.0" />
    <engine name="ios" spec="^4.5.3" />
    <plugin name="cordova-custom-config" spec="~3.0.11" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-plugin-device" spec="~1.1.2" />
    <plugin name="cordova-plugin-console" spec="~1.0.3" />
    <plugin name="cordova-plugin-camera" spec="~2.2.0" />
    <plugin name="cordova-plugin-inappbrowser" spec="~1.4.0" />
    <plugin name="cordova-plugin-dialogs" spec="~1.2.1" />
    <plugin name="cordova-plugin-app-version" spec="~0.1.9" />
    <plugin name="cordova-plugin-android-permissions" spec="~0.10.0" />
    <plugin name="cordova-plugin-spinner" spec="~1.1.0" />
    <plugin name="cordova-plugin-file-transfer" spec="~1.5.1" />
    <plugin name="cordova-plugin-statusbar" spec="~2.1.3" />
    <plugin name="cordova-plugin-splashscreen" spec="~3.2.2" />
    <plugin name="cordova-plugin-screen-orientation" spec="~1.4.2" />
    <plugin name="phonegap-plugin-barcodescanner" spec="https://github.com/jlowe234/phonegap-plugin-barcodescanner.git">
        <variable name="CAMERA_USAGE_DESCRIPTION" value="To scan barcodes and take profile pictures" />
    </plugin>
</widget>
