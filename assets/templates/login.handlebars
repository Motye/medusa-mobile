<div class="container-fluid">
    <form data-toggle="validator" role="form" id="login-form">
        <div class="form-group has-feedback">
            <div class="input-group">
                <span class="input-group-addon fi-at-sign" id="email-addon"></span>
                <input type="email" class="form-control" placeholder="Email address" aria-describedby="email-addon"
                       id="email-address" data-error="Invalid email address" value="{{username}}" required>
                <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
            </div>
        </div>

        <br/>
        <div class="form-group has-feedback">
            <div class="input-group">
                <span class="input-group-addon fi-lock" id="password-addon"></span>
                <input type="password" class="form-control" placeholder="Password" aria-describedby="password-addon"
                       id="password" data-error="Please enter your password" required>
                <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
            </div>
        </div>
        <br/>

        <button type="submit" class="btn btn-default center-block" id="signin-button"><span class="fi-unlock"></span>
            Sign in
        </button>
        <br />
        <p><em>Not a member yet?  Register <a href="signup" data-navigo>Here!</a></em></p>
    </form>
</div>
